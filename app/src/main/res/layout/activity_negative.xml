<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_v="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game_practice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/back45"
    tools:context="com.example.dqtech.puzzle_for_fun.Album">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    card_v:cardCornerRadius="8dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp">







                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/negative1"

                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    card_v:cardCornerRadius="8dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp">


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/negative2"

                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    card_v:cardCornerRadius="8dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/negative3"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    card_v:cardCornerRadius="8dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/negative4"

                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >



                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/a"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="a"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="a"/>
                <Button
                    android:id="@+id/e"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="e"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="e"/>
                <Button
                    android:id="@+id/v"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="v"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="v"/>
                <Button
                    android:id="@+id/g"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="g"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="g"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/n"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="n"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="n"/>
                <Button
                    android:id="@+id/t"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="t"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="t"/>
                <Button
                    android:id="@+id/i"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="i"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="i"/>
                <Button
                    android:id="@+id/e"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="e"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="e"/>

            </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Skip"
                android:textColor="#4b0082"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
    </ScrollView>





</LinearLayout>
