<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dreams_pics_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/back48"
    tools:context="com.example.dqtech.puzzle_for_fun.Dream">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp">







            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dream1"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dream2"
                />
        </android.support.v7.widget.CardView>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dream3"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dream4"
                />
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >



        <TextView
            android:id="@+id/tv1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/a"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="a"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="a"/>
        <Button
            android:id="@+id/l"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="l"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="l"/>
        <Button
            android:id="@+id/d"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="d"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="d"/>
        <Button
            android:id="@+id/e"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="e"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="e"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/u"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="u"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="u"/>
        <Button
            android:id="@+id/r"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="r"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="r"/>
        <Button
            android:id="@+id/z"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="z"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="z"/>
        <Button
            android:id="@+id/m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="m"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="m"/>
    </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Skip"
                android:textColor="#ffffe0"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
